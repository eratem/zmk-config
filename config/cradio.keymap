		};
	};
    keymap {
            compatible = "zmk,keymap";

        // Base alpha layer
       		default_layer {
		bindings = <
		&kp Q          &kp W       &kp F       &kp P      &kp B              &kp J  &kp L      &kp U       &kp CH_Y           &sl CHEESE
		&kp A          &kp R       &lp SYMR S  &lp NAV T  &kp G              &kp M  &rp NUM N  &rp SYML E  &kp I              &kp O
		&mt LALT CH_Z  &mt LCTRL X &kp C       &kp D      &mt LSHFT V        &kp K  &kp H       &kp COMMA   &mt LCTRL CH_QUOT &mt RALT DOT
                                         &mt LGUI SPACE   &kp BSPC           &lt FUNC ENTER  &sk LSHFT
		>;
		};

        // Left Symbol Layer
       		symleft_layer {
		bindings = <
		&kp DEL      &kp CH_DLR   &kp CH_HASH  &kp CH_PERC  &kp CH_LESS    xxxx       xxxx  xxxx  xxxx       xxxx
		&kp TAB      &kp CH_AST   &kp CH_PIPE  &kp CH_SLSH  &m_tild        xxxx       xxxx  xxxx  xxxx       xxxx
		&kp LS(TAB)  &kp CH_EURO  &m_grv       &kp CH_BSLS  xxxx           &kp LSHFT  xxxx  xxxx  &kp LCTRL  &kp LALT
					                                  ____  ____           ____  ____
		>;
		};

        // Right Symbol Layer
		    symright_layer {
		bindings = <
		&kp DEL      xxxx      xxxx  xxxx  xxxx         &kp CH_MORE  &kp CH_UNDS  &kp CH_EXLM  &kp CH_AMPR  &kp CH_AT
		&kp TAB      xxxx      xxxx  xxxx  xxxx         &kp CH_RING  &kp CH_MINS  &kp CH_QST   &kp CH_DQOT  &kp CH_PLUS
		&kp LS(TAB)  &kp LCTRL xxxx  xxxx  &kp LSHFT           xxxx  &kp CH_EQL   &m_acut      &m_carr      &kp CH_PARA
		                             ____  ____                ____  ____
		>;
		};

        // Swiss Special Symbol Layer
		    cheese_layer {
		bindings = <
		____        ____  ____        ____  ____             ____  ____  &mt_ue 0 0     ____         &kp CH_UML
		&mt_ae 0 0  ____  ____        ____  &kp CH_TILD      ____  ____  &kp LS(CH_OE)  ____         &mt_oe 0 0
		____        ____  &kp CH_GRV  ____  ____             ____  ____  &kp CH_ACUT    &kp CH_CARR  ____
		                              ____  ____             ____  ____
		>;
		};

        // Numbers (Left Hand)
       		num_layer {
		bindings = <
		&kp N7          &kp N6          &kp N5          &kp N4           &kp N9           xxxx       xxxx  xxxx  xxxx      xxxx
		&mt CH_PLUS N3  &mt CH_MINS N2  &mt CH_AST N1  &mt CH_SLSH N0   &mt CH_EQL N8    xxxx       xxxx  xxxx  xxxx      xxxx
		&kp LC(Z)       &kp LC(X)       &kp LC(C)       &mt CH_COLN DOT  &kp LC(V)        &kp LSHFT  xxxx  xxxx  &kp LGUI  &kp LALT
          				                                           ____  ____             ____  ____
		>;
		};
        // Navigation (Right Hand)
       		nav_layer {
		bindings = <
		xxxx      xxxx      xxxx  xxxx  xxxx         xxxx  &kp HOME     &kp PG_DN  &kp PG_UP  &kp END
		xxxx      xxxx      xxxx  xxxx  xxxx         xxxx  &kp LEFT     &kp DOWN   &kp UP     &kp RIGHT
		&kp LALT  &kp LGUI  xxxx  xxxx  &kp LSHFT    xxxx  &kp LS(TAB)  &kp DEL    xxxx       &kp TAB
          	                      ____  ____         ____  ____
		>;
		};
        // Mouse Layer
